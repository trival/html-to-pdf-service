    "koa-bearer-token": "^2.0.2",
    "koa-bodyparser": "^4.3.0",
    "puppeteer": "^16.1.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "eslint": "^8.21.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "npm-check": "^6.0.1",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=18.*"
  }
}
