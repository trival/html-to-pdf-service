{
  "name": "html-to-pdf-service",
  "version": "1.0.0",
  "description": "A service converting a html page to pdf using puppeteer and headless chromium.",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "docker compose up",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "npm run test -- --watch",
    "update": "npm-check -u"
  },
  "author": "Thomas Gorny",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/trival/html-to-pdf-service"
  },
  "dependencies": {
